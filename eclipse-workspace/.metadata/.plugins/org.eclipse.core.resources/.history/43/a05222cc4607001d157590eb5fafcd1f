import javax.swing.JOptionPane;


public class TrueFalseQuestion extends Question {

	@Override
	String ask() {
		while (true) {
			String answer = JOptionPane.showInputDialog(question);
			answer = answer.toUpperCase();
			if (answer.equals("False") || answer.equals("FALSE") || answer.equals("f") || answer.equals("false") || answer.equals("t"))
				(answer.equals("True") || answer.equals("TRUE") || answer.equals("true") || answer.equals("n") || answer.equals("no"))
				(answer.equals("No") || answer.equals("NO") || answer.equals("y") || answer.equals("YES") || answer.equals("Yes")) || answer.equals("yes")
			{
				return answer;	
			}
			
		}
	}
	
	TrueFalseQuestion(String question, String answer){
		this.question = "TRUE or FALSE: " +question;
		this.correctAnswer = answer;
	}

}
